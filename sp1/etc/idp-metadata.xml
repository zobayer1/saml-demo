<?xml version="1.0" encoding="UTF-8"?>
<md:EntityDescriptor xmlns:md="urn:oasis:names:tc:SAML:2.0:metadata"
                     xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
                     xmlns:saml="urn:oasis:names:tc:SAML:2.0:assertion"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="urn:oasis:names:tc:SAML:2.0:metadata
                                         https://docs.oasis-open.org/security/saml/v2.0/saml-schema-metadata-2.0.xsd
                                         http://www.w3.org/2000/09/xmldsig#
                                         https://www.w3.org/TR/xmldsig-core/xmldsig-core-schema.xsd"
                     entityID="https://idp.localhost:8000">
    <md:IDPSSODescriptor protocolSupportEnumeration="urn:oasis:names:tc:SAML:2.0:protocol"
                         WantAuthnRequestsSigned="false">

        <!-- Signing Certificate -->
        <md:KeyDescriptor use="signing">
            <ds:KeyInfo>
                <ds:X509Data>
                    <ds:X509Certificate></ds:X509Certificate>
                </ds:X509Data>
            </ds:KeyInfo>
        </md:KeyDescriptor>

        <!-- Encryption Certificate (same as signing in this case) -->
        <md:KeyDescriptor use="encryption">
            <ds:KeyInfo>
                <ds:X509Data>
                    <ds:X509Certificate></ds:X509Certificate>
                </ds:X509Data>
            </ds:KeyInfo>
        </md:KeyDescriptor>

        <!-- Supported NameID Formats -->
        <md:NameIDFormat>urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress</md:NameIDFormat>
        <md:NameIDFormat>urn:oasis:names:tc:SAML:2.0:nameid-format:transient</md:NameIDFormat>
        <md:NameIDFormat>urn:oasis:names:tc:SAML:2.0:nameid-format:persistent</md:NameIDFormat>

        <!-- Single Sign-On Service Endpoints -->
        <md:SingleSignOnService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST"
                                Location="https://idp.localhost:8000/sso"/>
        <md:SingleSignOnService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect"
                                Location="https://idp.localhost:8000/sso"/>

        <!-- Supported Attributes -->
        <saml:Attribute Name="email"
                        NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:basic"/>
        <saml:Attribute Name="username"
                        NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:basic"/>
        <saml:Attribute Name="role"
                        NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:basic"/>
        <saml:Attribute Name="status"
                        NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:basic"/>
    </md:IDPSSODescriptor>
</md:EntityDescriptor>
